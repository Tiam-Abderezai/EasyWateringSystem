<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyDark"
    android:id="@+id/layout_schedule_crud"
    tools:context=".activities.ScheduleCRUDActivity">

    <TextView
        android:id="@+id/schedule_day_crud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/day"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_schedule_day"/>

    <TextView
        android:id="@+id/zone_number_crud"
        android:layout_below="@+id/schedule_day_crud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGreyDark"
        android:elevation="@dimen/elevation_edit_text"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/day"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_zone_number"/>
    <TextView
        android:id="@+id/zone_name_crud"
        android:layout_below="@+id/zone_number_crud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorGreyDark"
        android:elevation="@dimen/elevation_edit_text"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/day"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_zone_name"/>


    <TextView
        android:id="@+id/schedule_start_crud"
        android:layout_below="@id/zone_name_crud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorGreyDark"
        android:elevation="@dimen/elevation_edit_text"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/schedule_start"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_schedule_start"/>
    <Button
        android:id="@+id/timepicker_start_crud"
        android:layout_below="@id/schedule_start_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/start"
        android:contentDescription="@string/contentDesc_schedule_start_picker"/>

    <TextView
        android:id="@+id/schedule_end_crud"
        android:layout_below="@id/schedule_start_crud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorGreyDark"
        android:elevation="@dimen/elevation_edit_text"
        android:gravity="center_horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:text="@string/schedule_end"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_schedule_end"/>
    <Button
        android:id="@+id/timepicker_end_crud"
        android:layout_below="@id/schedule_end_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/finish"
        android:contentDescription="@string/contentDesc_select_schedule_end"/>
    <Button
        android:id="@+id/save_schedule_crud"
        android:layout_below="@+id/timepicker_end_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveSchedule"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/save"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_schedule_save"
        />

    <Button
        android:id="@+id/delete_schedule_crud"
        android:layout_below="@+id/timepicker_end_crud"
        android:layout_toRightOf="@+id/save_schedule_crud"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="deleteSchedule"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/delete"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_schedule_delete"
        />
</RelativeLayout>