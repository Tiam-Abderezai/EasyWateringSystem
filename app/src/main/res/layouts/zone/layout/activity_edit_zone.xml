<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ZoneEditActivity"
    android:background="@color/colorGreyDark"
    android:id="@+id/layout_zone_edit">

    <ImageView
        android:id="@+id/activity_edit_zone_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/contentDesc_zone_image_edit" />
    <TextView
        android:id="@+id/activity_edit_sys_name"
        android:layout_below="@+id/activity_edit_zone_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:hint="@string/system_address"
        android:background="@color/colorGreyDark"
        android:textColor="@color/colorAccent"
        android:textSize="24dp"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:drawSelectorOnTop="true"
        android:gravity="center_horizontal"
        android:contentDescription="@string/contentDesc_system_name_edit"/>
    <Spinner
        android:id="@+id/activity_edit_zone_number"
        android:layout_below="@id/activity_edit_sys_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/zone_number"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:drawSelectorOnTop="true"
        android:contentDescription="@string/contentDesc_zone_select_number"/>

    <EditText
        android:id="@+id/activity_edit_zone_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/activity_edit_zone_number"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/zone_name"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:drawSelectorOnTop="true"
        android:contentDescription="@string/contentDesc_zone_edit_name_new"/>


    <Button
        android:id="@+id/activity_edit_take_bt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takePhoto"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/activity_edit_zone_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/zone_photo_take"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_camera_open_edit"
        />
    <Button
        android:id="@+id/activity_edit_select_bt_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectPhoto"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/activity_edit_take_bt_photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/zone_photo_select"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_photo_select_new_edited"
        />

    <Button
        android:id="@+id/activity_edit_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveZoneEdit"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/activity_edit_select_bt_photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/save"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_zone_edited_save"
        />
</RelativeLayout>