<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyDark"
    tools:context=".activities.UserActivity">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="220dp"
        android:layout_height="254dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="64dp"
        android:elevation="@dimen/elevation_button"
        android:src="@drawable/profile_pic"
        android:contentDescription="@string/contentDesc_picture_profile"/>

    <Button
        android:id="@+id/activity_user_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:onClick="takePhoto"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/zone_photo_take"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_user_photo_take"/>

    <Button
        android:id="@+id/activity_user_select_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_take_photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:onClick="selectPhoto"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/zone_photo_select"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_user_photo_select"/>

    <Button
        android:id="@+id/activity_user_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_select_photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:onClick="savePhoto"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_user_save_button"/>

    <Button
        android:id="@+id/activity_user_bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_user_bt_save"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:onClick="deletePhoto"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/delete"
        android:textAllCaps="false"
        android:textStyle="bold"
android:contentDescription="@string/contentDesc_user_button_delete"
        />

</RelativeLayout>