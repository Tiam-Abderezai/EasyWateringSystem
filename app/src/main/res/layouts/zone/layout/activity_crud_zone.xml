<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ZoneCRUDActivity"
    android:background="@color/colorGreyDark"
    android:id="@+id/layout_zone_crud">


    <ImageView
        android:id="@+id/zone_crud_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/splash_image"
        android:contentDescription="@string/zone_image"
        />

<TextView
    android:id="@+id/activity_zone_crud_sys_name"
    android:layout_below="@id/zone_crud_image"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:textAlignment="center"
    android:hint="@string/system_address"
    android:background="@color/colorGreyDark"
    android:textColor="@color/colorAccent"
    android:textSize="24dp"
    android:elevation="@dimen/elevation_edit_text"
    android:textStyle="bold"
    android:drawSelectorOnTop="true"
    android:gravity="center_horizontal"
    android:contentDescription="@string/contentDesc_zone_sys_name_edit"/>
    <Spinner
        android:id="@+id/activity_zone_crud_zone_number"
android:layout_below="@id/activity_zone_crud_sys_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/zone_number"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:drawSelectorOnTop="true"
        android:contentDescription="@string/contentDesc_zone_edit_number"/>

    <EditText
        android:id="@+id/activity_zone_crud_zone_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@id/activity_zone_crud_zone_number"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/zone_name"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:drawSelectorOnTop="true"
        android:contentDescription="@string/contentDesc_zone_edit_new_name"/>


    <Button
        android:id="@+id/activity_zone_crud_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="takePhoto"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/activity_zone_crud_zone_name"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/zone_photo_take"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_camera_open"
        />
    <Button
        android:id="@+id/activity_zone_crud_choose_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="selectPhoto"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/activity_zone_crud_take_photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/zone_photo_select"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_photo_select"
        />
    <Button
        android:id="@+id/activity_zone_crud_bt_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveZone"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_below="@id/activity_zone_crud_choose_photo"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/save"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_zone_save_new"
        />

</RelativeLayout>