<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PassResetActivity"
    android:background="@color/colorGreyDark"
    android:id="@+id/layout_reset">

    <EditText
        android:id="@+id/activity_reset_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/email"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_email_reset"
        />

    <Button
        android:id="@+id/activity_reset_bt_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendEmail"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/activity_reset_et_email"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/recover_account"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_password_reset"
        />
</RelativeLayout>