<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreyDark"
    tools:context=".activities.RegisterActivity">

    <EditText
        android:id="@+id/activity_registration_et_name_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:hint="@string/name_first"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_name_first"/>

    <EditText
        android:id="@+id/activity_registration_et_name_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_registration_et_name_first"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:hint="@string/name_last"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_name_last"/>

    <EditText
        android:id="@+id/activity_registration_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_registration_et_name_last"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:hint="@string/email"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_email"/>

    <EditText
        android:id="@+id/activity_registration_et_email_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_registration_et_email"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:hint="@string/email_confirm"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_email_confirm"/>

    <EditText
        android:id="@+id/activity_registration_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_registration_et_email_confirm"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_password"
        />

    <EditText
        android:id="@+id/activity_registration_et_password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_registration_et_password"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:hint="@string/password_confirm"
        android:inputType="textPassword"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_password_confirm"/>

    <Button
        android:id="@+id/activity_registration_bt_account_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_registration_et_password_confirm"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:onClick="createAccount"
        android:text="@string/create_account"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_register_create_account_button"/>


</RelativeLayout>