<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity"
    android:background="@color/colorGreyDark"
    android:id="@+id/layout_login">

    <ImageView
        android:id="@+id/login_logo"
        android:src="@drawable/splash_image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_marginTop="32dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/contentDesc_login_logo"
        />


    <EditText
        android:id="@+id/activity_login_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:hint="@string/email"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_login_email"/>

    <EditText
        android:id="@+id/activity_login_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_below="@id/activity_login_et_email"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorSuperLightGrey"
        android:elevation="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_login_password"/>

    <Button
        android:id="@+id/activity_login_bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickLogin"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/activity_login_et_password"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/login"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:contentDescription="@string/contentDesc_login_button"
        />
    <Button
        android:id="@+id/activity_login_bt_account_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadRegisterActivity"
        android:layout_marginTop="8dp"
        android:layout_below="@id/activity_login_bt_login"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/create_account"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:contentDescription="@string/contentDesc_create_account_button"
        />
    <Button
        android:id="@+id/activity_login_bt_account_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="loadRecoverActivity"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/activity_login_bt_account_create"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/recover_account"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_account_forgot"
        />
</RelativeLayout>