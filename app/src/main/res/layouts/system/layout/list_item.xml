<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
android:background="@color/colorGreyDark">

    <RelativeLayout
        android:id="@+id/text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:contentDescription="@string/contentDesc_container_text">

        <TextView
            android:id="@+id/list_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal"
            android:textSize="32sp"
            tools:text="Item"
            android:layout_marginStart="128dp"/>

        <TextView
            android:id="@+id/list_text_2"
            android:layout_below="@id/list_text_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="128dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="normal"
            android:textSize="32sp"
            tools:text="Item2"
            android:layout_marginStart="128dp"/>

        <ImageView
            android:id="@+id/list_image_1"
            android:layout_below="@id/list_text_2"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginLeft="128dp"
            android:layout_centerVertical="true"
            tools:text="Image"
            android:layout_marginStart="128dp" />


    </RelativeLayout>


</RelativeLayout>