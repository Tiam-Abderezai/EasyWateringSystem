<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LinkNewSysActivity"
    android:background="@color/colorGreyDark">

    <Button
        android:id="@+id/activity_add_new_sys_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/system_link"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_system_add_new"
        />
    <Button
        android:id="@+id/activity_add_new_address_bt"
        android:layout_below="@+id/activity_add_new_sys_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorLightGrey"
        android:elevation="@dimen/elevation_button"
        android:text="@string/address_enter"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_system_add_new_address"
        />
</RelativeLayout>