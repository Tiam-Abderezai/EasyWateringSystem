<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LinkNewSysActivity"
    android:background="@color/colorGreyDark"
    android:id="@+id/layout_link_new_sys">
<ProgressBar
    android:id="@+id/progress_circular"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="32dp"
    android:visibility="invisible"
    android:contentDescription="@string/contentDesc_progress_bar_circle"
    />
    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        app:checkView_strokeColor="@color/green"
        app:checkView_strokeWidth="16dp"
        android:contentDescription="@string/contentDesc_check_view"
        />
    <Button
        android:id="@+id/activity_link_new_sys_bt"
        android:onClick="linkSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round"
        android:elevation="@dimen/elevation_button"
        android:text="@string/system_link"
        android:textStyle="bold"
        android:textSize="@dimen/elevation_edit_text"
        android:textAllCaps="false"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:contentDescription="@string/contentDesc_system_link_new_button"
        />

    <Button
        android:id="@+id/activity_link_new_address_bt"
        android:onClick="enterAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_link_new_sys_bt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_round"
        android:elevation="@dimen/elevation_button"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/address_enter"
        android:textAllCaps="false"
        android:textSize="@dimen/elevation_edit_text"
        android:textStyle="bold"
        android:contentDescription="@string/contentDesc_address_new_link_button"/>
</RelativeLayout>